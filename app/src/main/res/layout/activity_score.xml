<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Game1and3"
    android:background="@drawable/background1"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_top"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/green"
        app:theme="@style/AppTheme" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Results"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />
    </android.support.v7.widget.Toolbar>


    <TextView
    android:id="@+id/topTextView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/toolbar_top"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="22dp"
    android:ems="10"
    android:text=""
    android:textAlignment="center"
    android:textColor="@color/blue"
    android:textSize="30sp" />

    <TextView
        android:id="@+id/stageScoreTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topTextView"
        android:ems="10"
        android:text=""
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/blue"
        android:textSize="30sp" />

    <!--
    <TextView
        android:id="@+id/currentTotalScoreTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/stageScoreTextView"
        android:layout_alignBottom="@+id/stageScoreTextView"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/stageScoreTextView"
        android:ems="10"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="20sp" /> -->

    <TextView
        android:id="@+id/currentTotalScoreTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stageScoreTextView"
        android:ems="10"
        android:text=""
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/blue"
        android:textSize="30sp" />



    <TextView
        android:id="@+id/pressButtonToContinueTextView"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentTotalScoreTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:text=""
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/pink" />

    <Button
        android:id="@+id/buttonChangeDifficulty"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="100dp"
        android:background="@drawable/button_background"
        android:text="Change Difficulty"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonSelectOtherGame"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="330dp"
        android:background="@drawable/button_background"
        android:text="Change Game"
        android:textColor="#FFFFFF" />






</RelativeLayout>
