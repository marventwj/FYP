<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".Game1and3">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/AppTheme">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Difficulty Settings"
            android:textSize="30sp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>


    <Button
        android:id="@+id/buttonApply"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="200dp"
        android:background="@drawable/button_background"
        android:text="Apply"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="330dp"
        android:background="@drawable/button_background"
        android:text="Exit"
        android:textColor="#FFFFFF" />


    <TextView
        android:id="@+id/textViewSelectDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_top"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="Select Difficulty: "
        android:textColor="@color/blue" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewSelectDifficulty"
        android:layout_marginStart="150dp"
        android:background="@drawable/button_background" />

    <TextView
        android:id="@+id/textViewLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewSelectDifficulty"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:background="#FF0000"
        android:text="Level:"
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/textViewLevel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewLevel"
        android:layout_marginStart="210dp"
        android:background="#FF0000"
        android:text="Level 1"
        android:textColor="@color/blue" />


    <TextView
        android:id="@+id/textViewLevel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewLevel"
        android:layout_marginStart="350dp"
        android:background="#FF0000"
        android:text="Level 2"
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/textViewLevel3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewLevel"
        android:layout_marginStart="490dp"
        android:background="#FF0000"
        android:text="Level 3"
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/textViewNumberOfLED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewLevel"
        android:layout_below="@+id/textViewLevel"
        android:layout_marginTop="28dp"
        android:background="#FF0000"
        android:text="Number Of LED:"
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/textViewBufferTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewLevel"
        android:layout_below="@+id/textViewNumberOfLED"
        android:layout_marginTop="28dp"
        android:background="#FF0000"
        android:text="Buffer Time(Seconds): "
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/textViewNumberOfColours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewLevel"
        android:layout_below="@+id/textViewBufferTime"
        android:layout_marginTop="28dp"
        android:background="#FF0000"
        android:text="Number Of Colours:"
        android:textColor="@color/blue" />

    <SeekBar
        android:id="@+id/seekBarLevel1NumLED"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="140dp"/>

    <SeekBar
        android:id="@+id/seekBarLevel1Time"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="190dp" />

    <SeekBar
        android:id="@+id/seekBarLevel1NumColour"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="240dp" />

    <SeekBar
        android:id="@+id/seekBarLevel2NumLED"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="340dp"
        android:layout_marginTop="140dp" />

    <SeekBar
        android:id="@+id/seekBarLevel2Time"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="340dp"
        android:layout_marginTop="190dp" />

    <SeekBar
        android:id="@+id/seekBarLevel2NumColour"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="340dp"
        android:layout_marginTop="240dp" />

    <SeekBar
        android:id="@+id/seekBarLevel3NumLED"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="480dp"
        android:layout_marginTop="140dp" />

    <SeekBar
        android:id="@+id/seekBarLevel3Time"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="480dp"
        android:layout_marginTop="190dp" />

    <SeekBar
        android:id="@+id/seekBarLevel3NumColour"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="480dp"
        android:layout_marginTop="240dp" />

    <TextView
        android:id="@+id/seekBarTextViewLevel1NumLED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginTop="130dp"
        android:text=""
        android:textColor="@color/blue" />


    <TextView
        android:id="@+id/seekBarTextViewLevel1Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginTop="180dp"
        android:text=""
        android:textColor="@color/blue" />


    <TextView
        android:id="@+id/seekBarTextViewLevel1NumColour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginTop="230dp"
        android:text=""
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/seekBarTextViewLevel2NumLED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="350dp"
        android:layout_marginTop="130dp"
        android:text=""
        android:textColor="@color/blue" />



    <TextView
        android:id="@+id/seekBarTextViewLevel2Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="350dp"
        android:layout_marginTop="180dp"
        android:text=""
        android:textColor="@color/blue" />



    <TextView
        android:id="@+id/seekBarTextViewLevel2NumColour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="350dp"
        android:layout_marginTop="230dp"
        android:text=""
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/seekBarTextViewLevel3NumLED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="490dp"
        android:layout_marginTop="130dp"
        android:text=""
        android:textColor="@color/blue" />



    <TextView
        android:id="@+id/seekBarTextViewLevel3Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="490dp"
        android:layout_marginTop="180dp"
        android:text=""
        android:textColor="@color/blue" />



    <TextView
        android:id="@+id/seekBarTextViewLevel3NumColour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="490dp"
        android:layout_marginTop="230dp"
        android:text=""
        android:textColor="@color/blue" />


</RelativeLayout>
